<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.qryl.qrylyh.activity.login.complete.ChooseAreaActivity">

    <include layout="@layout/title" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/pic_background" />

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#e5e5e5" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:text="请选择您的职业"
        android:textColor="#464646"
        android:textSize="16sp" />

    <View style="@style/ViewLine" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingTop="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingTop="10dp">

            <Button
                android:id="@+id/btn_choose_hg"
                android:layout_width="120dp"
                android:layout_height="80dp"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="60dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/selector_btn_main"
                android:text="护工"
                android:textColor="#4581c7"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btn_choose_hs"
                android:layout_width="120dp"
                android:layout_height="80dp"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="60dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/selector_btn_main"
                android:text="护士"
                android:textColor="#4581c7"
                android:textSize="18sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp">

            <Button
                android:id="@+id/btn_choose_ys"
                android:layout_width="120dp"
                android:layout_height="80dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/selector_btn_main"
                android:text="医生"
                android:textColor="#4581c7"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btn_choose_tn"
                android:layout_width="120dp"
                android:layout_height="80dp"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="60dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/selector_btn_main"
                android:text="推拿"
                android:textColor="#4581c7"
                android:textSize="18sp" />
        </RelativeLayout>

    </LinearLayout>

    <View style="@style/ViewLine" />

</LinearLayout>
