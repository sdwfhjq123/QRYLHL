<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.qryl.qrylyh.activity.login.complete.ChooseAreaActivity">

    <include layout="@layout/title" />

    <View
        style="@style/ViewLine"
        android:layout_marginTop="150dp" />

    <View
        style="@style/ViewLine"
        android:layout_marginTop="5dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="请选择您的职业"
        android:textColor="#666" />

    <View style="@style/ViewLine" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingTop="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_choose_hg"
                android:layout_width="120dp"
                android:layout_height="80dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/selector_btn_login"
                android:text="护工"
                android:textColor="#fff" />

            <Button
                android:id="@+id/btn_choose_hs"
                android:layout_width="120dp"
                android:layout_height="80dp"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/selector_btn_login"
                android:text="护士"
                android:textColor="#fff" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_choose_ys"
                android:layout_width="120dp"
                android:layout_height="80dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/selector_btn_login"
                android:text="医生"
                android:textColor="#fff" />

            <Button
                android:id="@+id/btn_choose_tn"
                android:layout_width="120dp"
                android:layout_height="80dp"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/selector_btn_login"
                android:text="推拿"
                android:textColor="#fff" />
        </RelativeLayout>

    </LinearLayout>

    <View style="@style/ViewLine" />

</LinearLayout>
