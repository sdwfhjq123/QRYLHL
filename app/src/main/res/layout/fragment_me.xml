    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:padding="5dp">

        <ImageView
            android:id="@+id/ic_wallet_2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="15dp"
